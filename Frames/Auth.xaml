<ContentControl x:Class="Frames.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,128,0,96">
            <TextBlock Text="Логин:" Margin="10,5,0,0" FontSize="14" HorizontalAlignment="Left" />
            <TextBox x:Name="txbLogin" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" TextWrapping="Wrap" Margin="10"/>
            <TextBlock Text="Пароль:" Margin="10,5,0,0" FontSize="14" HorizontalAlignment="Left" />
            <PasswordBox x:Name="psbPassword" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Margin="5" />
            <Button x:Name="btnLogin" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,30,0,0" Width="150" Click="btnLogin_Click" Background="#FFDEDEDE" BorderBrush="#FFDEDEDE"/>

        </StackPanel>

    </Grid>
</ContentControl>
