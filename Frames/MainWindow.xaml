<Window x:Class="Frames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frames"
        mc:Ignorable="d"
        Title="Frames" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frmAuth" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <Button Content="К авторизации" HorizontalAlignment="Center" Margin="0,308,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="100" Click="Button_Click" BorderBrush="#FFD4D4D4" Background="#FFD4D4D4"/>

    </Grid>
</Window>
